<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:c="urn:import:com.sencha.gxt.widget.core.client"
             xmlns:button="urn:import:com.sencha.gxt.widget.core.client.button"
             xmlns:container="urn:import:com.sencha.gxt.widget.core.client.container"
             xmlns:form="urn:import:com.sencha.gxt.widget.core.client.form"
             xmlns:toolbar="urn:import:com.sencha.gxt.widget.core.client.toolbar"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:grid="urn:import:com.sencha.gxt.widget.core.client.grid">


    <ui:with type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData"
             field="layoutData">
        <ui:attributes width="1" height="-1"/>
    </ui:with>
    <ui:with type="com.sencha.gxt.widget.core.client.form.NumberPropertyEditor" field="doublePropertyEditor"/>
    <ui:with type="com.google.gwt.i18n.client.NumberFormat" field="numberFormat"/>
    <ui:with type="com.sencha.gxt.widget.core.client.grid.ColumnModel" field="cm"></ui:with>
    <ui:with type="com.sencha.gxt.data.shared.ListStore" field="store"></ui:with>
    <ui:with type="com.sencha.gxt.widget.core.client.grid.GridView" field="view">
      <ui:attributes stripeRows="true" forceFit="true"></ui:attributes>
    </ui:with>


    <g:HorizontalPanel spacing="10">

        <g:HTML ui:field="display"/>

        <c:ContentPanel width="400" bodyStyle="padding: 5px;" headerVisible="false">
            <container:VerticalLayoutContainer>
                <container:child layoutData="{layoutData}">
                    <form:FieldLabel text="Name">
                        <form:widget>
                            <form:TextField ui:field="name" allowBlank="false"/>
                        </form:widget>
                    </form:FieldLabel>
                </container:child>

                <container:child layoutData="{layoutData}">
                    <form:FieldLabel text="Symbol">
                        <form:widget>
                            <form:TextField ui:field="symbol" name="symbol"/>
                        </form:widget>
                    </form:FieldLabel>
                </container:child>

                <container:child layoutData="{layoutData}">
                    <form:FieldLabel text="Last">
                        <form:widget>
                            <form:NumberField ui:field="last" editor="{doublePropertyEditor}" allowBlank="false"
                                              allowNegative="false" name="last" format="{numberFormat}"/>
                        </form:widget>
                    </form:FieldLabel>
                </container:child>

                <container:child layoutData="{layoutData}">
                    <form:FieldLabel text="Change">
                        <form:widget>
                            <form:NumberField ui:field="change" editor="{doublePropertyEditor}" allowBlank="false"
                                              name="change" format="{numberFormat}"/>
                        </form:widget>
                    </form:FieldLabel>
                </container:child>

                <container:child layoutData="{layoutData}">
                    <form:FieldLabel text="Updated">
                        <form:widget>
                            <form:DateField ui:field="lastTrans" name="date"/>
                        </form:widget>
                    </form:FieldLabel>
                </container:child>

                <grid:Grid ui:field="grid" cm="{cm}" store="{store}" view="{view}">
                </grid:Grid>

            </container:VerticalLayoutContainer>

            <c:button>
                <button:TextButton ui:field="reset" text="Cancel"/>
            </c:button>

            <c:button>
                <button:TextButton ui:field="save" text="Save"/>
            </c:button>
        </c:ContentPanel>

    </g:HorizontalPanel>
</ui:UiBinder>